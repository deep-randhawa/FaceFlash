<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="randhawa.deep.faceflash.ModeChoice"
    android:background="#ffb3e5fc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation = "vertical">

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Select Mode"
            android:gravity="center"
            android:id="@+id/ScreenTitle"
            android:textSize="40sp"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMode1"
            android:text="Face Recognition"
            android:onClick="openQuestion"
            android:layout_below="@id/ScreenTitle"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMode2"
            android:layout_below="@id/buttonMode1"
            android:text="Name recognition"
            android:onClick="openQuestion"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMode3"
            android:layout_below="@id/buttonMode2"
            android:text="Other mode"
            android:onClick="openQuestion"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</RelativeLayout>
