<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="randhawa.deep.faceflash.Activities.MenuActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:src="#ffff352c" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:text="Play"
        android:id="@+id/playButton"
        android:layout_marginTop="20dp"
        android:onClick="openPlayScreen"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Binder"
        android:layout_marginTop="20dp"
        android:layout_below="@id/playButton"
        android:id="@+id/binderButton"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:layout_below="@id/binderButton"
        android:id="@+id/aboutButton"
        android:layout_marginTop="20dp"
        android:onClick="openAboutScreen"/>
</RelativeLayout>
