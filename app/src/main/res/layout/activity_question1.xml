<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_background"
                tools:context="randhawa.deep.faceflash.Question1Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:id="@+id/linearLayout1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="#f9060202"
            android:layout_marginBottom="10dp"
            android:id="@+id/qImage"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout1"
        android:orientation="vertical"
        android:background="#fffdf51b"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:layout_margin="16dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correct answer"
            android:textColor="#fffdf51b"
            android:background="#f9060202"
            android:layout_weight="1"
            android:onClick="buttonClicked"
            android:id="@+id/b0"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fffdf51b"
            android:background="#f9060202"
            android:text="LOLOLOL"
            android:layout_weight="1"
            android:onClick="buttonClicked"
            android:id="@+id/b1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fffdf51b"
            android:background="#f9060202"
            android:text="LOLOLOL"
            android:layout_weight="1"
            android:onClick="buttonClicked"
            android:id="@+id/b2"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fffdf51b"
            android:background="#f9060202"
            android:text="LOLOLOL"
            android:layout_weight="1"
            android:onClick="buttonClicked"
            android:id="@+id/b3"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#488D48"
        android:id="@+id/correctView"
        android:visibility="invisible"
        />

</RelativeLayout>